package 实验三;


import java.awt.FlowLayout;
 
import javax.swing.ButtonGroup;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.border.EmptyBorder;
 
public class Main extends JFrame {
	public Main(){
		this.setTitle("个人简历");
		this.setSize(500, 400);
		this.setLocation(500, 400);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		JPanel contentPane=new JPanel();
		contentPane.setBorder(new EmptyBorder(5,5,5,5));
		this.setContentPane(contentPane);
		contentPane.setLayout(new FlowLayout(FlowLayout.CENTER,5,5));
		JRadioButton randioButton1=new JRadioButton("男");
		JRadioButton randioButton2=new JRadioButton("女");
		contentPane.add(randioButton1);
		contentPane.add(randioButton2);
		
		JPanel contentPane1=new JPanel();
 		contentPane1.setBorder(new EmptyBorder(5,5,5,5));
 		this.setContentPane(contentPane1);
 		contentPane1.setLayout(new FlowLayout(FlowLayout.CENTER,5,5));
 		JCheckBox checkBox1=new JCheckBox("打球");
 		JCheckBox checkBox2=new JCheckBox("看书");
 		JCheckBox checkBox3=new JCheckBox("睡觉");
 		contentPane1.add(checkBox1);
 		contentPane1.add(checkBox2);
 		contentPane1.add(checkBox3);
 		this.setVisible(true);

		ButtonGroup group=new ButtonGroup();
		group.add(randioButton1);
		group.add(randioButton2);
		this.setVisible(true);
		
	}
    public static void main(String[]args){
    	Main example=new Main();
    }
}